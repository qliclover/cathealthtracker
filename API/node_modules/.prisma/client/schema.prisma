// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  cats      Cat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cat {
  id            Int            @id @default(autoincrement())
  name          String
  breed         String
  age           Int?
  weight        Float?
  imageUrl      String?
  owner         User           @relation(fields: [ownerId], references: [id])
  ownerId       Int
  healthRecords HealthRecord[]
  insurance     Insurance[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model HealthRecord {
  id          Int      @id @default(autoincrement())
  type        String
  date        DateTime
  description String
  notes       String?
  fileUrl     String?
  cat         Cat      @relation(fields: [catId], references: [id])
  catId       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Insurance {
  id           Int      @id @default(autoincrement())
  provider     String
  policyNumber String
  startDate    DateTime
  endDate      DateTime
  coverage     String?
  premium      Float?
  cat          Cat      @relation(fields: [catId], references: [id])
  catId        Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
